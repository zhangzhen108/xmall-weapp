/* component/product-big/product-big.wxss */

.product-big {
  position: relative;
}

.product-big .img {
  width: 320rpx;
  height: 320rpx;
  border: 1px solid #f0f0f0;
  border-radius: 0.2rem;
}

.product-big .img-noborder {
  width: 320rpx;
  height: 320rpx;
}

.product-big .name {
  display: block;
  overflow: hidden;
  font-size: 24rpx;
  color: #555;
  font-weight: bold;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.product-big .yhq{
  width: 100%
}
.product-big .description {
  font-size: 20rpx;
  color: #f0f0f0;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  background-image: url('data:image/png;base64,')
}

.product-big .price {
  font-size: 24rpx;
  color: #d44d44;
  font-weight: 700;
}
.product-big .originalPrice {
  text-decoration:line-through;
  font-size: 24rpx;
  color: #7f7f7f
}

.product-big .tag {
  font-weight: 700;
  position: absolute;
  top: 10rpx;
  left: 15rpx;
}
